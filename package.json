{
  "name": "webp-screenshot",
  "version": "1.0.0",
  "description": "Direct WebP screenshot capture for Windows, Mac, and Linux with 59% faster processing, 22% memory reduction, and 45% CPU savings",
  "main": "src/index.js",
  "scripts": {
    "build": "node-gyp rebuild",
    "test": "node run-working-tests.js",
    "test:extended": "node run-extended-tests.js",
    "test:working": "node run-working-tests.js",
    "test:performance": "npx jest test/performance/core-benchmarks-fixed.test.js --testTimeout=60000",
    "test:performance:stress": "npx jest test/performance/stress-tests.test.js --testTimeout=120000",
    "test:security": "npx jest test/security/buffer-safety-fixed.test.js --testTimeout=30000",
    "test:streaming": "npx jest test/integration/streaming-pipeline-fixed.test.js --testTimeout=60000",
    "test:main": "npx jest tests/integration/main-functionality.test.js --testTimeout=60000",
    "test:edge-cases": "npx jest test/edge-cases/boundary-conditions.test.js --testTimeout=45000",
    "test:concurrency": "npx jest test/concurrency/multi-threaded.test.js --testTimeout=90000",
    "test:errors": "npx jest test/error-handling/comprehensive-errors.test.js --testTimeout=60000",
    "test:quality": "npx jest test/quality/webp-compression-validation.test.js --testTimeout=75000",
    "test:memory": "npx jest test/memory/resource-management.test.js --testTimeout=120000",
    "benchmark": "node performance-benchmark.js",
    "validate": "node test-simd-performance.js",
    "analyze": "node performance-analysis.js",
    "lint": "eslint src/",
    "clean": "node-gyp clean",
    "install": "node-gyp rebuild",
    "prepack": "npm run build"
  },
  "keywords": [
    "screenshot",
    "webp",
    "cross-platform",
    "native",
    "performance"
  ],
  "author": "WebP Screenshot Team",
  "license": "MIT",
  "dependencies": {
    "bindings": "^1.5.0",
    "nan": "^2.18.0",
    "node-addon-api": "^8.5.0",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "babel-jest": "^29.7.0",
    "chai": "^4.5.0",
    "eslint": "^8.0.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.0",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-promise": "^6.1.0",
    "jest": "^29.0.0",
    "node-gyp": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/webp-screenshot.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/webp-screenshot/issues"
  },
  "homepage": "https://github.com/your-org/webp-screenshot#readme"
}
